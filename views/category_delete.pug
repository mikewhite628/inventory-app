extends layout 

block content 
  div(class='center-text')
    h1 #{title}: #{category.name} 
  
    if category_items.length 
  
      p #[strong Delete the following items before attempting to delete this System.]
  
      div
        h4 Items 
        
        dl 
        each item in category_items 
          dt 
            a(href=item.url) #{item.name}
          dd #{item.description}
  
    else
  
    p Do you really want to delete this System?
  
    form(method='POST' action='')
      div.form-group 
        input#category.id.form-control(type='hidden', name='categoryid', required='true', value=category.id)
        
        button.btn.btn-primary(type='submit') Delete
extends layout 

block content 

  h1= title 

  form(method='POST' action='' enctype='multipart/form-data')
    div.form-group
      label(for='name') Item Name: 
      input#name.form-control(type='text' placeholder='Video Game Name', name='name' required='true' value=(undefined===item ? '' : item.name))
    div.form-group
      label(for='category')
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked)
            label(for=category._id) #{category.name}
    div.form-group 
      label(for='price')
      input#price.form-control(type='float', placeholder='Price', name='price', required='true' value=(undefined===item ? '' : item.price))
    div.form-group  
      label(for='description')
      input#description.form-control(type='textarea', name='description' placeholder='A brief description of the item' value=(undefined===item ? '' : item.description))
    div.form-group  
      label(for='onHand')
      input#onHand.form-control(type='number', placeholder='Quantity', name='onHand', required='true' value=(undefined===item ? '' : item.onHand))
    div.form-group
      label(for='avatar')
      input#avatar.form-control(type='file', name='avatar')
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg

  
      